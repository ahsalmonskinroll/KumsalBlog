		          <div class="image position-relative ">
						<img src="~/images/portfolio/1.png" alt="portfolio-image" class="img-fluid w-100 d-block">
	                <div class="overlay-box">
	                  <div class="overlay-inner"> <!--portfolio-single-->
								<a class="overlay-content" href="@Url.Action("YazilimMuhendisligi", "Home")">
